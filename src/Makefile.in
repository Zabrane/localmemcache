CC=@CC@
TARGET=liblmc.a
CFLAGS=-Wall -Wunused  -fPIC
LDFLAGS=
AR=ar
RANLIB=@RANLIB@
LIBS=
OFILES= \
	valloc.o \
	lmc_error.o \
	hashtable.o \
	shm.o \
	lock.o \
	localmemcache.o 


$(TARGET): $(OFILES)
	$(AR) r $@ $(OFILES)
	$(RANLIB) $@

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

test: $(TARGET)
	./tests/runtest.sh

clean: 
	rm -f *.log *.so *.a *.o tests/core tests/vgcore* \
	    tests/*.so tests/*.o  ruby-binding/*.o ruby-binding/*.so 
	    

distclean: clean
	rm -f config.status Makefile config.h tests/Makefile ruby-binding/Makefile
	rm -rf autom4te.cache 
